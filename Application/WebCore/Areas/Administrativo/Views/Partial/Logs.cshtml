@using UtilService.Util
@model Domain.Dtos.LogGenerico.Output.LogGenericoListarLogOutModel

<fieldset>
    <legend>Log de alterações</legend>
    <div class="row" id="areaLog">
        <div class="col-lg-12">
            <table class="table table-striped table-bordered table-hover" id="tabelaLogGeral" data-table="true" data-ordenar-colunas="false" width="100%">
                <thead>
                    <tr>
                        <th>Campo</th>
                        <th>Antes da alteração</th>
                        <th>Após alteração</th>
                        <th>Usuário</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.ListaLogGenerico)
                    {
                        <tr>
                            <td>@obj.Campo</td>
                            <td>@obj.ValorAnterior</td>
                            <td>@obj.ValorAlterado</td>
                            <td>@obj.UsuarioAcao</td>
                            <td class="text-right">@obj.DataHoraAcao.ToFormatedDataHora()</td>
                        </tr>
                    }
                </tbody>
                <tfoot></tfoot>
            </table>
        </div>
    </div>
</fieldset>

