@using System.Web
@model Domain.Dtos.Disciplina.Input.DisciplinaAdicionarInModel
@{
    ViewData["Title"] = "Cadastro de Disciplina";
    Layout = "~/Areas/Administrativo/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Adicionar", "Disciplina", FormMethod.Post, new { id = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(o => o.IDUsuarioCadastro)
    <div class="row">
        <div class="col-md-12 top-bar">
            <a title="Clique aqui para ser direcionado a listagem de cadastro de atendimento" class="btn btn-primary pull-right" href="@Url.Action("Index", "Turma", new { Area = "Administrativo" })"><i class="fa fa-th-list"></i> Listar</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(null, new { @class = "alert alert-danger escondido", validator = "true" })
        </div>
    </div>
    <fieldset>
        <legend>Dados de Idenficação</legend>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="form-group">
                    @Html.LabelFor(x => x.Disc_NM_Nome, null, new { @class = "control-label" })
                    @Html.TextBoxFor(x => x.Disc_NM_Nome, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Disc_NM_Nome, null, new { @class = "alerta-campo" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Disc_TX_Observacao, null, new { @class = "control-label" })
                    @Html.TextAreaFor(x => x.Disc_TX_Observacao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Disc_TX_Observacao, null, new { @class = "alerta-campo" })
                </div>
            </div>
        </div>
    </fieldset>
    <hr />
    <div class="row">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-primary btn-success " title="Clique aqui para salvar o atendimento"><i class="fa fa-check"></i> Salvar</button>
        </div>
    </div>
}

