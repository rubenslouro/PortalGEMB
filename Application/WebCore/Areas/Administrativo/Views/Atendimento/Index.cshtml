@using UtilService
@using UtilService.Util
@model List<Domain.Entities.AtendimentoHistorico>
@{
    ViewData["Title"] = "Lista de Atendimentos";
    Layout = "~/Areas/Administrativo/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 top-bar">
        <a title="Clique aqui para adicionar um novo atendimento" class="btn btn-primary pull-right" href="@Url.Action("Adicionar", "Atendimento", new {Area = "Administrativo"})"><i class="fa fa-plus-circle"></i> Adicionar</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table  table-hover" width="100%" data-table="true">
            <thead>
                <tr>
                    <th style="width: 50px">Código</th>
                    <th style="width: 100px">Data Cadastro</th>
                    <th>Nome Assistido \ Observação</th>
                    <th>Tipo de Atendimento</th>
                    <th style="width: 100px">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td style="width: 50px">@obj.Atendimento.Aten_ID_Atendimento</td>
                        <td style="width: 100px">@obj.Atendimento.Aten_DT_Cadastro</td>
                        <td>
                            @obj.Assistido.Assi_NM_Nome
                            <br />
                            @obj.Atendimento.Aten_TX_Observacao
                        </td>
                        <td>
                            @foreach (var item in @obj.TipoAtendimento)
                            {
                                @item.TpAt_NM_Descricao
                                <br />
                            }
                        </td>
                        <td style="width: 100px">
                            <a class="btn btn-info" href="@Url.Action("Visualizar", "Atendimento", new {Area = "Administrativo", codAtendimento = obj.Atendimento.Aten_ID_Atendimento})" title="Visualizar"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <thead>
                <tr>
                    <td colspan="5">&nbsp;</td>
                </tr>
            </thead>
            <tfoot></tfoot>
        </table>
    </div>
</div>

