@model Domain.Dtos.Usuario.EsqueciSenha.Input.UsuarioEsqueciSenhaInModel
@{
    ViewData["Title"] = "Esqueceu a senha?";
    Layout = "~/Views/Shared/_LayoutLimpo.cshtml";
}
@{
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 ">
            <div class="panel panel-primary panel-no-border panel-rounded sombra-basica">
                <div class="panel-heading panel-rounded-up">
                    Atenção - Aviso importante
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                Informe o e-mail utilizado em seu cadastro no campo abaixo. Após algum tempo você receberá um e-mail com as instruções de como obter sua senha.
                            </p>
                        </div>
                    </div>
                    @using (Html.BeginForm("LembrarSenha", "Principal", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.ValidationSummary(null, new { @class = "alert alert-danger escondido", validator = "true" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(o => o.Email , new {@class="control-label"})
                                    @Html.TextBoxFor(x => x.Email, new {@class = "form-control text-lowercase", placeholder = Html.DisplayNameFor(x => x.Email)})
                                    @Html.ValidationMessageFor(x => x.Email, null, new {@class = "alerta-campo-login"})
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-success" title="Clique aqui para receber um email com seus dados cadastrais, inclusive sua senha." value="Enviar" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="panel-footer  panel-rounded">
                    @Html.ActionLink("Lembrou a senha? Então volte para o login aqui", "LoginAdm", "Principal")
                </div>
            </div>
        </div>
    </div>
}
